<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="background">@color/colorControlNormal</item>
        <item name="backgroundTint">@color/colorControlNormal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>


    <style name="AppThemeD" parent="ThemeOverlay.AppCompat.Dark">
        <item name="background">@color/colorControlNormald</item>
        <item name="backgroundTint">@color/colorControlNormald</item>
        <item name="colorPrimary">@color/colorPrimaryd</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkd</item>
        <item name="colorAccent">@color/colorAccentd</item>
        <item name="colorControlHighlight">@color/colorControlHighlightd</item>
        <item name="colorControlNormal">@color/colorControlNormald</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferencesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#ffffff</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#fefefe</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>


</resources>
